    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Tentang Aplikasi"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"
        android:lineSpacingExtra="3dp"
        android:text="Aplikasi ini merupakan aplikasi pendataan Alumni yang sistematis. Aplikasi ini dapat menambah, melihat, mengubah dan menghapus data Alumni. Aplikasi ini diharapkan dapat menjadi pengganti pendataan manual di kampus.
"
        />

</LinearLayout>